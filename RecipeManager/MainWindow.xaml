<Window x:Class="RecipeManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe Mangager" Height="600" Width="900" MinHeight="600" MinWidth="900" Loaded="Window_Loaded">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <Menu IsMainMenu="True">
                <MenuItem Header="_File">
                    <MenuItem Header="_Add Recipe..." Click="AddRecipe"/>
                    <MenuItem Header="_View Recipe..." Click="ViewRecipe"/>
                    <MenuItem Header="_Edit Recipe..." Click="EditRecipe"/>
                    <MenuItem Header="_Create Menu..." Click="CreateMenu"/>
                    <Separator />
                    <MenuItem Header="_Open..." Click="Open"/>
                    <Separator />
                    <MenuItem Header="_Save" Click="Save"/>
                    <MenuItem Header="_Save As..." Click="SaveAs"/>
                    <Separator />
                    <MenuItem Header="Print" Click="Print"/>
                    <Separator />
                    <MenuItem Header="_Exit" Click="Exit"/>
                </MenuItem>
                <MenuItem Header="_Tools" Click="Tools"/>
                <MenuItem Header="_Help" Click="Help"/>
            </Menu>

        </Grid>

        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" Name="LeftColumn"/>
                <ColumnDefinition Width="200" Name="MiddleColumn"/>
                <ColumnDefinition Width="*" Name="RightColumn"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="55"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0">
                    <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="Name"/>
                    <TextBox HorizontalAlignment="Left" VerticalAlignment="Center" Margin="70,0,0,0" Height="20" Width="160"/>
                </Grid>

                <Grid Grid.Row="1">
                    <Label Content="Rating" VerticalAlignment="Center"/>
                    <TextBox HorizontalAlignment="Left" VerticalAlignment="Center" Margin="70,0,0,0" Height="20" Width="50"/>
                    <Label HorizontalAlignment="Left" VerticalAlignment="Center" Margin="123,0,0,0" Content="to"/>
                    <TextBox HorizontalAlignment="Left" VerticalAlignment="Center" Margin="147,0,0,0" Height="20" Width="50"/>
                </Grid>

                <Grid Grid.Row="2">
                    <Label VerticalAlignment="Center" Content="Prep Time"/>
                    <TextBox HorizontalAlignment="Left" VerticalAlignment="Center" Margin="70,0,0,0" Height="20" Width="50"/>
                    <Label HorizontalAlignment="Left" VerticalAlignment="Center" Margin="123,0,0,0" Content="to"/>
                    <TextBox HorizontalAlignment="Left" VerticalAlignment="Center" Margin="147,0,0,0" Height="20" Width="50"/>
                </Grid>

                <Grid Grid.Row="3">
                    <Label VerticalAlignment="Center" Content="Cook Time"/>
                    <TextBox HorizontalAlignment="Left" VerticalAlignment="Center" Margin="70,0,0,0" Height="20" Width="50"/>
                    <Label HorizontalAlignment="Left" VerticalAlignment="Center" Margin="123,0,0,0" Content="to"/>
                    <TextBox HorizontalAlignment="Left" VerticalAlignment="Center" Margin="147,0,0,0" Height="20" Width="50"/>
                </Grid>

                <Grid Grid.Row="4">
                    <Label VerticalAlignment="Center" Content="Ingredient"/>
                    <TextBox HorizontalAlignment="Left" VerticalAlignment="Center" Margin="70,0,0,0" Height="20" Width="160"/>
                </Grid>

                <Grid Grid.Row="5">
                    <Border BorderThickness="0,1,0,0" BorderBrush="Black"/>
                    <Label VerticalAlignment="Center" Content="Type"/>
                    <CheckBox Content="Main" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="70,0,0,0"/>
                    <CheckBox Content="Side" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="130,0,0,0"/>
                </Grid>

                <Grid Grid.Row="6">

                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Border BorderThickness="0,1,0,0" BorderBrush="Black"/>
                    <Label Grid.Row="0" VerticalAlignment="Center" Content="Meal"/>
                    <CheckBox Grid.Row="1" Content="Breakfast" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0"/>
                    <CheckBox Grid.Row="1" Content="Lunch" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="90,0,0,0"/>
                    <CheckBox Grid.Row="1" Content="Dinner" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="150,0,0,0"/>

                </Grid>

                <Grid Grid.Row="7" Margin="0,0,0,3">

                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Border BorderThickness="0,1,0,0" BorderBrush="Black"/>
                    <Label Grid.Row="0" Content="Category" VerticalAlignment="Center" Margin="0,-5,0,0"/>
                    <CheckBox Grid.Row="1" Content="Appetizer/Snack" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    <CheckBox Grid.Row="1" Content="Bean/Rice/Grain" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="125,0,0,0"/>
                    <CheckBox Grid.Row="2" Content="Beverage" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    <CheckBox Grid.Row="2" Content="Bread" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="125,0,0,0"/>
                    <CheckBox Grid.Row="3" Content="Cake/Frosting" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    <CheckBox Grid.Row="3" Content="Candy" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="125,0,0,0"/>
                    <CheckBox Grid.Row="4" Content="Canning/Freezing" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    <CheckBox Grid.Row="4" Content="Cheese/Egg" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="125,0,0,0"/>
                    <CheckBox Grid.Row="5" Content="Cookie/Bar" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    <CheckBox Grid.Row="5" Content="Dessert" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="125,0,0,0"/>
                    <CheckBox Grid.Row="6" Content="Fish" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    <CheckBox Grid.Row="6" Content="Grill" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="125,0,0,0"/>
                    <CheckBox Grid.Row="7" Content="Meat" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    <CheckBox Grid.Row="7" Content="Pasta" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="125,0,0,0"/>
                    <CheckBox Grid.Row="8" Content="Pie/Tart" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    <CheckBox Grid.Row="8" Content="Poultry" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="125,0,0,0"/>
                    <CheckBox Grid.Row="9" Content="Sallad/Dressing" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    <CheckBox Grid.Row="9" Content="Sauce/Relish" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="125,0,0,0"/>
                    <CheckBox Grid.Row="10" Content="Slow Cooker" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    <CheckBox Grid.Row="10" Content="Soup/Stew" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="125,0,0,0"/>
                    <CheckBox Grid.Row="11" Content="Vegetables/Fruit" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </Grid> 

            </Grid>

            <Grid Grid.Column="1">
                <Border BorderThickness="1,0,1,0" BorderBrush="Black"/>
            </Grid>

            <Grid Grid.Column="2">
            </Grid>


        </Grid>

    </Grid>

</Window>
